  "keyFeatures": [
    "Unified framework for DAGs, branches, and agentic loops",
    "Hierarchical graph composition with nested graphs",
    "Automatic edge inference from parameter names",
    "Build-time validation with strict type checking",
    "Pure, testable functions without framework dependencies",
    "Interactive graph visualization",
    "Sync and async execution with streaming support",
    "Human-in-the-loop workflows with pause/resume"
  ],
  "publicApiSurface": [
    "@node - Function decorator for graph nodes",
    "@route - Conditional routing with multiple targets",
    "@ifelse - Binary conditional branching",
    "@interrupt - Human-in-the-loop pause points",
    "Graph - Main graph construction class",
    "SyncRunner - Synchronous graph execution",
    "AsyncRunner - Asynchronous graph execution",
    "FunctionNode - Wrapped function node",
    "GraphNode - Nested graph as node",
    "GateNode - Routing control node",
    "EventDispatcher - Execution event system",
    "RichProgressProcessor - Progress bar visualization",
    "InMemoryCache - In-memory result caching",
    "DiskCache - Persistent disk caching",
    "END - Sentinel for terminating execution"
  ]
